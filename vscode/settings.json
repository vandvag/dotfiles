{
  // Editor settings
  "editor.suggestSelection": "first",
  "editor.fontFamily": " 'Monaspace Argon', 'Iosevka Nerd Font Mono', 'JetBrainsMono Nerd Font Mono','FiraCode NFM',monospace",
  "editor.fontWeight": "Medium",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "selection",
  "editor.insertSpaces": true,
  "editor.wordWrap": "off",
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.detectIndentation": false,
  "editor.tabSize": 4,
  "editor.cursorStyle": "line",
  // "editor.insertSpaces": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.minimap.autohide": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
},
  "editor.lineNumbers": "relative",
  // "editor.wordWrapColumn": 120,
  "editor.rulers": [120],
  "editor.inlayHints.enabled": "onUnlessPressed",
  "editor.guides.bracketPairs": true,
  "search.useRipgrep": true,
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.leader": " ",
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-s>": false,
    "<C-z>": false,
    "<C-d>": false,
    "<C-k>": false
  },
  "vim.smartRelativeLine": true,

  // vim keybindings
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<CR>"],
      "after": ["o", "<Esc>"]
    },
    {
      "before": ["<S-CR>"],
      "after": ["O", "<Esc>"]
    },
    {
      "before": ["<C-v>"],
      "after": ["<leader>", "v"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "*", "p"]
    },
    {
      "before": ["<leader>", "P"],
      "after": ["\"", "*", "P"]
    },
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    {
      "before": ["<leader>", "\\"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "q"],
      "after": [":", "q", "enter"]
    },
    {
      "before": ["<leader>", "f"],
      "after": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["welcome.showNewFileEntries"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    }
  ],
  "vim.normalModeKeyBindings": [
    // {
    //   "before": ["<tab>"],
    //   "commands": ["workbench.action.nextEditor"]
    // },
    {
      "before": ["<leader>", "v"],
      "commands": ["workbench.action.splitEditor"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "*", "y"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "*", "p"]
    },
    {
      "before": ["<leader>", "P"],
      "after": ["\"", "*", "P"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    }
  ],
  "terminal.integrated.sendKeybindingsToShell": true,
  "search.showLineNumbers": true,
  "notebook.lineNumbers": "on",

  // Workbench settings
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.editor": "json", // Open settings in json mode
  "workbench.startupEditor": "none",
  "workbench.settings.openDefaultSettings": true,
  "explorer.confirmDelete": false,
  "workbench.tips.enabled": false,
  "workbench.tree.indent": 2,
  "workbench.tree.renderIndentGuides": "always",
  "terminal.integrated.fontSize": 12,
  "editor.renderLineHighlight": "gutter",
  "workbench.sideBar.location": "right",

  // Debug
  "debug.terminal.clearBeforeReusing": true,
  //==========
  // Python //
  //=========
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "120"],
  "python.languageServer": "Default",
  "python.defaultInterpreterPath": "/Users/vandvag/miniconda3/bin/python",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--ignore=E501"],
  "[python]": {
    "editor.formatOnType": true
  },

  // Terminal
  "terminal.external.osxExec": "iterm.app",
  "terminal.integrated.bellDuration": 900,
  "terminal.integrated.cursorBlinking": true,
  "material-icon-theme.folders.theme": "specific",
  "git.ignoreMissingGitWarning": true,

  // C/C++
  "[cpp]": {
    "editor.tabSize": 4
  },
  "C_Cpp.codeFolding": "disabled",
  "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true,
  "cmake.configureOnOpen": true,
  "cmake.generator": "",

  // JSON
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "bash (MSYS2)": {
      "path": "C:\\msys64\\usr\\bin\\bash.exe",
      "args": ["--login", "-i"]
    },
    "Ubuntu (WSL)": {
      "path": "C:\\Windows\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "rust-analyzer.lens.references.trait.enable": true,
  "rust-analyzer.check.command": "clippy",
  "diffEditor.ignoreTrimWhitespace": false,
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.updateDelay": 5000,
  "gitlens.views.commitDetails.files.layout": "list",
  "terminal.integrated.inheritEnv": false,
  "lldb.suppressUpdateNotifications": true,
  "lldb.showDisassembly": "never",
  "workbench.colorTheme": "Kanagawa"
}
